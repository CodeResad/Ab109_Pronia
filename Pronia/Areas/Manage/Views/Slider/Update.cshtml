@using Pronia.Models
@model Slider

<div class="container">
    <form method="POST" enctype="multipart/form-data">
        <div class="row">
            <div class="form-group col-md-4">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Offer">Offer</label>
                <input asp-for="Offer" class="form-control">
                <span asp-validation-for="Offer"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="File">Image File</label>
                <input asp-for="File" class="form-control">
                <span asp-validation-for="File"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <label asp-for="Description">Description</label>
                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
            </div>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>